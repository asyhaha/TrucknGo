<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fef7f0"
    android:fitsSystemWindows="false"> <!-- important -->


    <!-- 🟤 Top Header Bar lifted to status bar area -->
    <!-- 🟤 Top Header Bar -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="48dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#7C6F64"
        android:elevation="8dp">


    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="App Logo"
            android:src="@drawable/logo_truckngo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TrucknGo"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 📜 Scrollable Content -->
<ScrollView
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- 📝 Report Truck -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardReport"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="6dp"
        android:backgroundTint="#7C6F64"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="📝 Report Truck"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:padding="12dp" />
    </androidx.cardview.widget.CardView>

    <!-- 📍 Map Tracker -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMap"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="6dp"
        android:backgroundTint="#7C6F64"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="📍 Map Tracker"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:padding="12dp" />
    </androidx.cardview.widget.CardView>

    <!-- ℹ️ About Us -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAbout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="6dp"
        android:backgroundTint="#7C6F64"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ℹ️ About Us"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:padding="12dp" />
    </androidx.cardview.widget.CardView>

    <!-- 👤 Admin -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAdmin"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="6dp"
        android:backgroundTint="#7C6F64"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="👤 Admin"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:padding="12dp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>
</ScrollView>
    </LinearLayout>
